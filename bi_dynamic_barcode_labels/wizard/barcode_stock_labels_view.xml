<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_barcode_stock_picking_labels" model="ir.ui.view">
        <field name="name">Barcode Product Labels</field>
        <field name="model">barcode.stock.labels.wiz</field>
        <field name="arch" type="xml">
            <form string="Barcode Product Labels">
                <sheet>
                    <group>
                     <separator string="Products To Print" colspan="4"/>
					 <group>
				       <field name="product_barcode_ids" widget="section_and_note_one2many">
                          <tree editable="bottom" width="100%">
							<field name="name" style="max-width:30px;" invisible="1"/>
							<field name="picking_type_code" style="max-width:30px;" invisible="1"/>
							<field name="partner_name" style="max-width:30px;" invisible="1"/>
							<field name="product_id" style="max-width:80px;"/>
							<field name="picking_id" style="max-width:50px;" invisible="1"/>
							<field name="label_text" style="max-width:50%;"/>
                            <field name="qty" style="max-width:20px;"/>
                          </tree>
                        </field>
					  </group>
                    </group>
                    <span class="o_form_label" style="font-weight:bold;">More Information about barcode configuration data, please navigate to Inventory -> Settings -> Barcode Configuration</span>
                </sheet>
                <footer>
                    <button name="print_barcode_labels" string="Print" type="object" 
                        class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_stock_picking_view_barcode_product_labels" model="ir.actions.act_window">
        <field name="name">Barcode Product Labels</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">barcode.stock.labels.wiz</field>
        <field name="view_mode">form</field>
        <field name='target'>new</field>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
    </record>

</odoo>
