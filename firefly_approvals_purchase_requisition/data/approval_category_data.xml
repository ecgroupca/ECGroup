<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="approvals_purchase.approval_category_data_rfq" model="approval.category">
            <field name="has_quality_tag">optional</field>
        </record>
    </data>
    <data noupdate="1">
        <record id="approval_category_data_purchase_agreement" model="approval.category">
            <field name="name">Create Purchase Agreements</field>
            <field name="approval_type">purchase_agreement</field>
            <field name="image" type="base64" file="firefly_approvals_purchase_requisition/static/src/img/purchase_agreement.svg"/>
            <field name="sequence">90</field>
            <field name="has_product">required</field>
            <field name="has_quantity">required</field>
            <field name="has_agreement_type">required</field>
            <field name="has_vendor">optional</field>
            <field name="has_analytic_account">optional</field>
            <field name="has_analytic_tag">optional</field>
            <field name="automated_sequence" eval="True"/>
            <field name="sequence_code">APPA</field>
        </record>
    </data>
    <data noupdate="1">
        <record id="approval_category_data_vendor_bill" model="approval.category">
            <field name="name">Create Bills</field>
            <field name="approval_type">vendor_bill</field>
            <field name="image" type="base64" file="firefly_approvals_purchase_requisition/static/src/img/purchase_agreement.svg"/>
            <field name="sequence">100</field>
            <field name="has_product">optional</field>
            <field name="has_quantity">required</field>
            <field name="has_vendor">optional</field>
            <field name="has_bill_reference">optional</field>
            <field name="has_price">optional</field>
            <field name="has_account">required</field>
            <field name="has_analytic_account">optional</field>
            <field name="has_analytic_tag">optional</field>
            <field name="automated_sequence" eval="True"/>
            <field name="sequence_code">APBR</field>
        </record>
    </data>
</odoo>
