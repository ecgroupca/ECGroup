<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="customized_approval_category_view_form" model="ir.ui.view">
        <field name="name">customized.approval.category.view.form</field>
        <field name="model">approval.category</field>
        <field name="inherit_id" ref="approvals.approval_category_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='has_quantity']" position="attributes">
                <attribute name="attrs">
                    {'readonly': [('approval_type', 'in', ['purchase', 'purchase_agreement', 'vendor_bill'])]}
                </attribute>
                <attribute name="force_save">1</attribute>
            </xpath>
            <xpath expr="//field[@name='has_product']" position="attributes">
                <attribute name="attrs">
                    {'readonly': [('approval_type', 'in', ['purchase', 'purchase_agreement'])]}
                </attribute>
                <attribute name="force_save">1</attribute>
            </xpath>
            <xpath expr="//field[@name='has_product']" position="before">
                <field name="has_agreement_type" string="Agreement Type" force_save="1" widget="radio" options="{'horizontal': true}" attrs="{'invisible': [('approval_type', '!=', 'purchase_agreement')], 'readonly': [('approval_type', '=', 'purchase_agreement')]}"/>
                <field name="has_vendor" string="Vendor" widget="radio" options="{'horizontal': true}" attrs="{'invisible': [('approval_type', 'not in', ['purchase_agreement', 'vendor_bill'])]}"/>
                <field name="has_bill_reference" string="Bill Reference" widget="radio" options="{'horizontal': true}" attrs="{'invisible': [('approval_type', '!=', 'vendor_bill')]}"/>
            </xpath>
            <xpath expr="//field[@name='has_product']" position="after">
                <field name="has_price" string="Price" widget="radio" options="{'horizontal': true}" attrs="{'invisible': [('approval_type', '!=', 'vendor_bill')]}"/>
            </xpath>
            <xpath expr="//field[@name='has_quantity']" position="after">
                <field name="has_account" string="Account" widget="radio" options="{'horizontal': true}" attrs="{'invisible': [('approval_type', '!=', 'vendor_bill')], 'readonly': [('approval_type', '=', 'vendor_bill')]}"/>
                <field name="has_analytic_account" string="Analytic Account" widget="radio" options="{'horizontal': true}" attrs="{'invisible': [('approval_type', 'not in', ['purchase', 'purchase_agreement', 'vendor_bill'])]}" groups="analytic.group_analytic_accounting"/>
                <field name="has_analytic_tag" string="Analytic Tag" widget="radio" options="{'horizontal': true}" attrs="{'invisible': [('approval_type', 'not in', ['purchase', 'purchase_agreement', 'vendor_bill'])]}" groups="analytic.group_analytic_tags"/>
                <field name="has_quality_tag" string="Quality Tags" widget="radio" options="{'horizontal': true}" attrs="{'invisible': [('approval_type', '!=', 'purchase')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
