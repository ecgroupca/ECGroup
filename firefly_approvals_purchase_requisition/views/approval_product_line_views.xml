<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="customized_approval_product_line_view_tree" model="ir.ui.view">
        <field name="name">customized.approval.product.line.view.tree</field>
        <field name="model">approval.product.line</field>
        <field name="inherit_id" ref="approvals.approval_product_line_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="attrs">{
                    'required': [
                        '|',
                            ('parent.approval_type', 'in', ['purchase', 'purchase_agreement']),
                            ('parent.has_product', '=', 'required'),
                    ]}
                </attribute>
            </xpath>
            <xpath expr="//field[@name='description']" position="after">
                <field name="account_id"
                    options="{'no_create': True}"
                    domain="[('deprecated', '=', False), ('user_type_id.type', 'not in', ('receivable', 'payable')), ('company_id', '=', parent.company_id), ('is_off_balance', '=', False)]"
                    attrs="{'column_invisible': [('parent.has_account', '=', 'no')], 'required': [('parent.has_account', '=', 'required')]}"
                    groups="account.group_account_readonly"/>
            </xpath>
            <xpath expr="//field[@name='product_uom_id']" position="after">
                <field name="price_unit" attrs="{'column_invisible': [('parent.has_price', '=', 'no')], 'required': [('parent.has_price', '=', 'required')]}"/>
                <field name="account_analytic_id" attrs="{'column_invisible': [('parent.has_analytic_account', '=', 'no')], 'required': [('parent.has_analytic_account', '=', 'required')]}" groups="analytic.group_analytic_accounting"/>
                <field name="analytic_tag_ids" widget="many2many_tags" attrs="{'column_invisible': [('parent.has_analytic_tag', '=', 'no')], 'required': [('parent.has_analytic_tag', '=', 'required')]}" groups="analytic.group_analytic_tags"/>
            </xpath>
        </field>
    </record>
</odoo>
