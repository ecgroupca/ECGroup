<odoo>
   <data noupdate="1">

            <record id="manufacturing_request_order_record_rule" model="ir.rule">
                <field name="name">All Manufacturing Order Request</field>
                <field ref="model_manufacturing_request_custom" name="model_id"/>
                <field name="domain_force">[(1,'=',1)]</field>
                <field name="groups" eval="[(4, ref('mrp.group_mrp_manager'))]"/>
            </record>

            <record id="manufacturing_request_order_user_rule" model="ir.rule">
                <field name="name">Manufacturing Order Request</field>
                <field ref="model_manufacturing_request_custom" name="model_id"/>
                <field name="domain_force">[('custom_user_id','=',user.id)]</field>
                <field name="groups" eval="[(4, ref('mrp.group_mrp_user'))]"/>
            </record>
            <record model="ir.rule" id="manufacturing_request_order_multi_company_rule">
                <field name="name">Manufacturing Order Request multi-company</field>
                <field name="model_id" ref="model_manufacturing_request_custom"/>
                <field name="global" eval="True"/>
                <field name="domain_force">['|',('custom_company_id','=',False),('custom_company_id', 'in', company_ids)]</field>
            </record>
           

   </data>
</odoo>
