<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="external_layout_ec_logo">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
		<div t-attf-class="header o_company_#{company.id}_layout">
			<div class="row">
				<div class="col-3 mb4">
				  <t t-foreach="company.search([('id','=',1)])" t-as="base_company">
					<img t-if="base_company" t-att-src="image_data_uri(base_company.logo)" style="max-width:450px;max-height:95px;margin:0px;padding:0px;" alt="Parent Company Logo"/>
				    </t>
				</div>
			</div>
		</div>
		<div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
			<t t-call="web.address_layout"/>
			<t t-raw="0"/>
		</div>
		<div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout" style="font-size:10px;">
				<div t-if="report_type == 'pdf'" class="text-muted">
					Page: <span class="page"/> / <span class="topage"/>
				</div>
		</div>
    </template>
</odoo>