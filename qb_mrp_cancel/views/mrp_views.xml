<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="mrp_production_form_confirm">
        <field name="name">mrp.production.form.confirm</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_cancel']" position="attributes">
                <attribute name="confirm">Please return any "picked" material back to inventory.</attribute>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="mrp_production_backorders">
        <field name="name">mrp.production.form.backorders</field>
        <field name="model">mrp.production.backorder</field>
        <field name="inherit_id" ref="mrp.view_mrp_production_backorder_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_close_mo']" position="attributes">
                <attribute name="groups">mrp.group_mrp_manager</attribute>
            </xpath>
        </field>
    </record>
</odoo>
