<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_returns_wiz_view" model="ir.ui.view">
        <field name="name">MRP Returns</field>
        <field name="model">mrp.return.picking</field>
        <field name="arch" type="xml">
        <form string="Return Transfers">
            <footer>
                <button name="create_returns" string="Create Returns" type="object" default_focus="1" class="oe_highlight"/>
                <button string="Cancel" class="btn btn-secondary" special="cancel" />
            </footer>
        </form>
        </field>
    </record>

    <record id="action_return_picking" model="ir.actions.act_window">
        <field name="name">MRP Returns</field>
        <field name="res_model">mrp.return.picking</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="mrp_returns_wiz_view"/>
        <field name="target">new</field>
    </record>

</odoo>
