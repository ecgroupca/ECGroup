<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="qb_approval_request_inherit_view" model="ir.ui.view">
        <field name="name">qb.approvals.request.inherit</field>
        <field name="model">approval.request</field>
		<field name="inherit_id" ref="approvals.approval_request_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='o_not_full oe_button_box']" position="inside">
                <button type="object"
                    name="action_view_quality"
                    class="oe_stat_button"  
                    icon="fa-bell"
                    attrs="{'invisible': [('quality_count', '=', 0)]}">
                    <field name="quality_count" widget="statinfo" string="Quality Alerts"/>
                </button>
            </xpath>
		</field>
    </record>
</odoo>