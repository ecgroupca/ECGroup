<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="qb_quality_production_inherit_view" model="ir.ui.view">
        <field name="name">qb.mrp.quality.inherit</field>
        <field name="model">mrp.production</field>
		<field name="inherit_id" ref="quality_mrp.mrp_production_view_form_inherit_quality"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_quality_alert']" position="replace">
            </xpath>
            <xpath expr="//button[@name='button_quality_alert']" position="replace">
            </xpath>
		</field>
    </record>
    <record id="qb_mrp_quality_inherit_view" model="ir.ui.view">
        <field name="name">qb.mrp.quality.inherit</field>
        <field name="model">mrp.production</field>
		<field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object"
                    name="action_view_quality"
                    class="oe_stat_button"  
                    icon="fa-gears"
                    attrs="{'invisible': [('quality_alert_count', '=', 0)]}">
                    <field name="quality_alert_count" widget="statinfo" string="Quality Alerts"/>
                </button>
            </xpath>
		</field>
    </record>
</odoo>