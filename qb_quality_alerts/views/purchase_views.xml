<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="qb_purchase_quality_inherit_view" model="ir.ui.view">
        <field name="name">qb.purchase.quality.inherit</field>
        <field name="model">purchase.order</field>
		<field name="inherit_id" ref="purchase.purchase_order_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='o_not_full oe_button_box']" position="inside">
                <button type="object"
                    name="action_view_quality_alerts"
                    class="oe_stat_button"  
                    icon="fa-gears"
                    attrs="{'invisible': [('quality_count', '=', 0)]}">
                    <field name="quality_count" widget="statinfo" string="Quality Alerts"/>
                </button>
            </xpath>
		</field>
    </record>
</odoo>
