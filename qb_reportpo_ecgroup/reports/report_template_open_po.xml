<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="report_open_po">
		<t t-call="web.html_container">
			<t t-call="web.external_layout">
				<t t-foreach="sm" t-as="vendor">
					<div class="page" style="font-name:Calibri;page-break-before:always;">
						<table width="100%" style="padding:5px;margin:15px 0;font-size:10pt;">
							<tr>
								<td><strong>Open Purchase Report Report</strong></td>
								<td rowspan="3"><h6>PLEASE REVIEW AND REPLY<br/>WITH ESTIMATED COMPLETION DATE</h6></td>
								<td rowspan="3" align="center">Please complete and fax to:<br/>310-818-5548<br/>Attn. Anita</td>
							</tr>
							<tr>
								<td><strong>Vendor : <span t-if="sm[vendor]['ref']"><t t-esc="sm[vendor]['ref']"/> - </span><t t-esc="sm[vendor]['name']"/></strong></td>
							</tr>
							<tr>
								<td><span t-if="date_from"><strong>Opend Orders : </strong><t t-esc="date_from"/> <strong>  -  </strong> <t t-esc="date_to"/></span></td>
							</tr>
						</table>
						<table width="100%" style="padding:5px;margin:15px 0;font-size:10pt;">
							<thead>
								<tr style="border-bottom:2px solid black;">
									<th>PO #</th>
									<th style="text-align:center" width="10%">Date</th>
									<th style="text-align:center" width="10%">Required<br/>Date</th>
									<th style="text-align:center">Sidemark<br/>SO #</th>
									<th style="text-align:right">Order<br/>QTY</th>
									<th style="text-align:right">Received<br/>QTY</th>
									<th style="text-align:center">Item #</th>
									<th style="text-align:center" width="10%">Item<br/>Description</th>
									<th style="text-align:center" width="10%">Vendor<br/>Comments</th>
								</tr>							
							</thead>
							<tbody>
								<t t-foreach="sm[vendor]['data']" t-as="po">
									<t t-foreach="po.order_line" t-as="line">
		                        		<tr style="border-bottom:1px solid black;">
		                        			<td><span t-field="line.order_id.name"/></td>
		                        			<td width="10%"><span t-field="line.order_id.date_order"/></td>
		                        			<td width="10%"><span t-field="line.order_id.date_planned"/></td>
		                        			<td><span t-if="line.sale_order_id" t-field="line.sale_order_id.name"/></td>
		                        			<td align="right"><span t-field="line.product_qty"/></td>
		                        			<td align="right"><span t-field="line.qty_received"/></td>
		                        			<td style="padding-left:5px;">
		                        				<t t-if="line.product_id.default_code">
			                        				<span t-field="line.product_id.default_code"/>
		                        				</t>
		                        				<t t-else="">
			                        				<span t-field="line.product_id.name"/>
		                        				</t>
		                        			</td>
		                        			<td width="15%"><span t-field="line.name"/></td>
		                        			<td width="10%" style="border-left:1px solid black;"></td>
		                        		</tr>
		                        	</t>
	                        	</t>
							</tbody>
						</table>
					</div>
				</t>
			</t>
		</t>
    </template>
</odoo>
