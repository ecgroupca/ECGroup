<odoo>
    <record id="rma_production_wizard_view_form" model="ir.ui.view">
        <field name="name">rma.production.wizard.form</field>
        <field name="model">rma.production.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="scheduled_date" />
                    </group>
                    <group>
                        <field name="product_id" required="1"/>
						<field name="company_id" required="1"/>
                        <label
                            for="product_uom_qty"
                            attrs="{'invisible': [('rma_count', '>', 1)]}"
                        />
                        <div
                            class="o_row"
                            attrs="{'invisible': [('rma_count', '>', 1)]}"
                        >
                            <field
                                name="product_uom_qty"
                                attrs="{'required': [('rma_count', '=', 1)]}"
                            />
                            <field
                                name="product_uom"
                                groups="uom.group_uom"
                                attrs="{'required': [('rma_count', '=', 1)]}"
                            />
                        </div>
                    </group>
                </group>
                <field name="rma_count" invisible="1" />
                <footer>
                    <button
                        name="action_repair"
                        string="Repair"
                        type="object"
                        class="btn-primary"
                    />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <act_window
        id="rma_production_wizard_action"
        name="Repair Item"
        binding_model="rma"
        binding_views="list"
        res_model="rma.production.wizard"
        view_mode="form"
        target="new"
    />
</odoo>
