<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_salesorder_form_mod" model="ir.ui.view">
        <field name="name">sale.order.form.mods</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="authorized_transaction_ids" position="after">
			    <button name='pay_commission' string='Pay Commission' type='object' attrs="{'invisible': [('state', 'in', ['draft','cancel'])]}"/>			    
            </field>			
            <field name="partner_shipping_id" position="after">
                <field name="sidemark"/> 
                <field name="client_order_ref"/> 			   
            </field>
			<field name="payment_term_id" position="after">
			    <field name="approx_lead_time"/>
			    <field name="deposit_total"/> 
                <field name="inv_bal_due"/>			   
			</field>
			<xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='price_unit']" position="after">
				<field name="comm_rate"/>
			</xpath>
			<xpath expr="//notebook/page/field[@name='order_line']/form/group/group/field[@name='price_unit']" position="after">
				<field name="comm_rate"/>
			</xpath>
		</field>
    </record>
	
    <record id="view_salesteam_form_mod" model="ir.ui.view">
        <field name="name">salesteam.mods</field>
        <field name="model">crm.team</field>
        <field name="inherit_id" ref="sales_team.crm_team_view_form"/>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
			    <field name="default_comm_rate"/>
			</field>
        </field>
    </record>

    <record id="view_quotation_tree_mod" model="ir.ui.view">
        <field name="name">sale.quotation.tree.mods</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <field name="amount_total" position="after">
				<field name="deposit_total"/>
				<field name="inv_bal_due"/>
			</field>
        </field>
    </record>
	
    <record id="view_sales_tree_mod" model="ir.ui.view">
        <field name="name">sale.tree.mods</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <field name="amount_total" position="after">
				<field name="deposit_total"/>
				<field name="inv_bal_due"/>
			</field>
        </field>
    </record>
	
    <record id="view_sales_search_filter_mod" model="ir.ui.view">
        <field name="name">sale.filter.mods</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
			    <field name="etwo_number" string="E2 Sale"/>
			</field>
        </field>
    </record>		
		
		
</odoo>
