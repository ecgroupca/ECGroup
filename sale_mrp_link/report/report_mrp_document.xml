										<span t-field="move_line.lot_id"/><br/>
									</t>
								</td>
								<td t-else="">
									<span/>
								</td>
							</tr>
					    </tbody>
              		</table>
                    <div class="oe_structure"/>
                </div>
            </t>
          </t>
        </t>
      </t>
</template>
</odoo>