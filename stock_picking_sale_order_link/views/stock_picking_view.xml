<odoo>
    <record id="view_picking_form_sale_mods_ec" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
		  <xpath expr="//div[@name='button_box']" position="inside">
			<button name="action_view_sale_order" class="oe_stat_button" icon="fa-dollar" string="Sales Order" type="object" attrs="{'invisible': [('sale_id', '=', False)]}" groups="stock.group_stock_user">
			</button>
		  </xpath>
			  <xpath expr="//field[@name='user_id']" position="replace">
			<field name="sale_user_id"/>
		  </xpath>
		  <xpath expr="//field[@name='owner_id']" position="replace">
			 <field name="sale_id"/>
		  </xpath>
		  <xpath expr="//group[@name='carrier_data']//field[@name='carrier_id']" position="replace">
			<field name="carrier_id" invisible="1"/>
			<field name="x_shipper_id"/>
		  </xpath>
		  <field name="origin" position="after">
			<field name="x_bol_date"/>
			<field name="x_printed"/>
		  </field>
        </field>
    </record>
    <record id="view_picking_tree_sale_mods_ec" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree" />
        <field name="arch" type="xml">
            <field name="state" position="after">
			    <field name="inv_bal_due"/>
			</field>
            <field name="user_id" position="replace">
			    <field name="sale_user_id"/>
			</field>
        </field>
    </record>
</odoo>
